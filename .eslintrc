{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "airbnb",
    "settings": {
        "import/core-modules": [ "homey" ]
    },
    "rules": {
        "indent": [2, "tab", { "SwitchCase": 1, "VariableDeclarator": 1 }],
        "no-tabs": 0,
        "linebreak-style": 0,
        "strict": 0,
        "padded-blocks": 0,
        "no-underscore-dangle": 0,
        "max-len": ["error", { "comments": 250, "code": 150 }],
        "no-await-in-loop": 0
    }
}
